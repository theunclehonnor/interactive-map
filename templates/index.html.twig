        <div class="container form_color w-50">
                <form method="post" enctype="multipart/form-data" action="">
                    <div class="form-group row mb-5 d-flex justify-content-around">
                        <label for="exampleFormControlInput0" class="text-center label_width_product">Дата:</label>
                        <select class="form-control input_width" id="exampleFormControlSelect0" name="year">
                            {% for year in years %}
